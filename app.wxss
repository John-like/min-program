/* 公用筛选右侧滑动  */

.screening{
  width: 76%;
  height: 100%;
  position: fixed;
  bottom: 0rpx;
  left: 24%;
  z-index: 101;
  background: #fff;
  font-size: 24rpx;
  color: #777;
}
.screening-contetn{
  height: 100%;
}
.screening_form{
   height: 100%;
   width: 100%;
   display: block;
   position: relative;
}
.screening_form_content{
  height: 92%;
 overflow-y: scroll;
  padding: 0rpx 30rpx;
}
.screening_btm{
  width: 100%;
  height: 8%;
  display: flex;
  position: absolute;
  left: 0;
  bottom: 0;
  background: #fff;
}

.screening_btm button{
   width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #000;
  font-size: 32rpx;
  border-top: 1px solid #ccc;
  border-radius: 0rpx;
}
.screening_btm .screening_btm_sure{
   border-top: none;
   background: #f23030;
   color: #fff;
}
.screening_btm .screening_btm_rest{
   border-top: 1px solid #ccc;
   background: #fff;
   color: #000;
}
.screening-price{
  display: flex;
  justify-content: space-around; 
}
.screening_title{
  margin-bottom: 36rpx;
  font-size: 30rpx;
  color: #333333;
  margin-top: 36rpx;
}
.screening-price wx-input{
  width: 210rpx;
  height: 66rpx;
  border-radius: 6rpx;
  background: #efefef;
  color: #333;
  font-size: 28rpx;
  text-align: center;
}
.screening-price wx-view{
  line-height: 66rpx;
}
.screening_brand{
  clear: both;
  overflow: hidden;
}
.brand_pic{
  float: left;
  margin-left: 42rpx;
  width: 188rpx;
  height: 84rpx;
  border:1px solid #c7c7c7;
  border-radius: 4rpx; 
    margin-bottom: 36rpx;
}
.brand_pic-active{
  border: 1px solid #f23030;
}
.brand_pic wx-image{
  width: 100%;
  height: 100%;
}

