.drawer_main_more{
  margin: 10rpx 0rpx;
}

 .drawer_main_check{
  margin: 12rpx 6rpx;  
  /* height: 50rpx; */
  display: flex;
} 
.drawer_main_check wx-text {
  display: block;
  line-height: 50rpx;
}
.drawer_main_number{
  margin-top: 32rpx;
}
.main_number_num{
  margin-bottom: 14rpx;
}

.btn_ok{ 
 height: 100rpx;
 line-height: 100rpx;
 font: 32rpx; 
 text-align: center; 
 color: #fff; 
 background: #289dee;
} 
/*加 减 按钮样式  */
.num-content{
   display: flex;
