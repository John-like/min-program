/* pages/user_center/user_add_address/user_add_address.wxss */

page {
  background-color: #f5f5f5;
}

wx-text {
  color: #333;
  font-size: 28rpx;
}

.radio-group {
  width: 100%;
  padding: 0 44rpx;
  box-sizing: border-box;
  height: 87rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
  align-items: center;
}

.radio {
  display: block;
}

.radio-group wx-text {
  padding-right: 50rpx;
}

.input-list {
  width: 100%;
  height: 88rpx;
  padding: 0 44rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  justify-content: center;
  line-height: 88rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.input-list wx-text {
  width: 150rpx;
}

.input-list wx-input {
  display: block;
  height: 88rpx;
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 88rpx;
}

.input-list-last {
  width: 100%;
  padding: 0 44rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  justify-content: center;
  border-bottom: 1rpx solid #f5f5f5;
  max-height: 250rpx;
  overflow: hidden;
  position: relative;
}

.input-list-last wx-text {
  width: 150rpx;
  line-height: 88rpx;
}

.input-list-last wx-textarea {
  padding-top: 20rpx;
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
  height: 250rpx;
}

.input-list-last .placeholder {
  width: 300rpx;
  position: absolute;
  top: 0;
  left: 194rpx;
  color: #808080;
}

.default {
  justify-content: flex-start;
  /* background-color: #f5f5f5; */
}
.default wx-checkbox {
  margin-right: 20rpx;
}

#button {
  width: 580rpx;
  height: 88rpx;
  margin-top: 30rpx;
  background-color: #00a0f5;
  color: #fff;
  line-height: 88rpx;
}

.hide {
  display: none;
}

.input-list-picker wx-picker {
  width: 100%;
}

.input-list-picker {
  justify-content: flex-start;
}

/* .input-list-picker wx-picker .title {
  width:150rpx;
} */

.input-list-picker .content {
  display: block;
  flex: 1;
}

.select_location {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
}

.select_curtain {
  width: 100%;
  height: 630rpx;
  background-color: rgba(0, 0, 0, 0.4);
}

.select_inner {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 568rpx;
  background-color: #fff;
  font-size: 36rpx;
}

.indicator_location {
  height: 64rpx;
}

.select_sure {
  widows: 100%;
  height: 88rpx;
  border-bottom: 2rpx solid #f2f2f2;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.select_sure wx-text {
  line-height: 88rpx;
  color: #888;
  font-size: 32rpx;
}

.select_sure .sure {
  color: #1aad19;
}

.select_inner .picker-con {
  width: 100%;
  height: 600rpx;
}

.select_inner .select-text {
  line-height: 64rpx;
  text-align: center;
  font-size: 28rpx;
}
