.checkbox {
  width: 94rpx;
  height: 56rpx;
  display: block;
  margin-right: 30rpx;
}
.checkbox_wrapper {
  position: relative;
}
.checkbox_item {
   opacity: 0; 
}
.checkbox_checked_con {
  position: absolute;
  top: 0;
  left: 0;
  width: 94rpx;
  height: 56rpx;
  z-index: 1;
  border:3rpx solid #09bb07; 
  border-radius: 31rpx;
  transition: all 0.5s;
  background: #09bb07;
}
.checkbox_checked_con wx-view {
  width: 56rpx;
  height: 56rpx;
  border: 2rpx solid #e9e9e9;
  border-radius: 50%;
  transition: all 0.5s;
  background: #fff;
  margin-left: -2rpx;
  transform: translateX(40rpx);
  margin-top: -1rpx;
}
.checkbox_checked {
   background: #fff;
   border-color: #e3e3e3;
}
.checkbox_checked wx-view {
  transform: translateX(0);
}
