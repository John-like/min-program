.tip_message_con {
  /* width: 100%;   */
  height: 80rpx;
  position:fixed;
  bottom:10%;
  left:50%; 
  z-index: 1100;
  display: flex;
  justify-content: center;
 
}
.tip_message {
  display: block;
  width: auto; 
  margin: 0 auto;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  color:#fff;
  font-size: 28rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  text-align: center;
  padding: 0 20rpx;
  transform:translateX(-50%); 
  box-sizing: border-box;
  word-break:keep-all;
  white-space:nowrap;
}
.show {
  display: block;
}
.hide {
  display: none;
}
/* 订单商品列表  */
.order_classify {
  width: 100%;
  padding:0 44rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #d0d0d0;
  margin-top: 20rpx;
}
.order_title {
  font-size: 24rpx;
  color: #777;
  line-height: 85rpx;
}
.order_item {
