  <view class='total'>
    <text wx:if="{{orderGoodsServePrice}}">合计(含服务费)：￥{{orderGoodsTotalPrice}}</text>
    <text wx:else>合计：￥{{orderGoodsTotalPrice}}</text>
    <button formType="submit" disabled='{{isChooseProtocal}}' class='{{isChooseProtocal?"":"active"}}' data-growing-title="确认订单中的提交">提交</button>
  </view>
