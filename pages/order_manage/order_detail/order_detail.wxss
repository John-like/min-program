/* pages/order_manage/order_detail/order_detail.wxss */

page{
  width: 100%;
  height: 100%;
  color: #777;
  font-size: 24rpx;
}
.container {
  padding-bottom: 100rpx;
}
.container_overflow {
  height: 100%;
  overflow: hidden;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
}
/*头部 message  */
.message-title{
  line-height: 80rpx;
  border-bottom: 1px solid #c3c3c3;
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  color: #333;
}
.message-main{
  padding: 0rpx 38rpx;
  margin-top: 32rpx;
}
.message-main>wx-view{
  margin-bottom: 30rpx;
}
.main-btn-content{
  display: flex;
  justify-content: flex-end;
}
.main-btn {
  width: 140rpx;
  height: 48rpx;
  border: 1px solid #c9c9c9;
  border-radius: 8rpx;
  text-align: center;
  margin-right: 20rpx;
  line-height: 50rpx;
}
.main-btn:nth-last-child(1){
  margin-right: 0rpx;
}
.message-btm{
  padding: 4rpx 38rpx;
  color: #d71518;
}

/*中间公用部分*/
.sendTime{
  padding: 30rpx 40rpx;
  border-top: 1px solid #c3c3c3;
  border-bottom: 1px solid #c3c3c3;
  background: #f5f5f5;
  color: #777777;
}
.order_classify {
  width: 100%;
  padding:0 44rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #d0d0d0;
}
.order_title {
  font-size: 24rpx;
  color: #777;
  line-height: 85rpx;
}
.order_item {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 30rpx;
}
.order_item wx-image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}
.goods_name {
  font-size: 28rpx;
  color: #333;
  margin-top: -10rpx;
}
.order_item wx-text {
  display: block;
  line-height: 43rpx;
}
.order_item .orderDetail_num{
 position: relative;
  height: 40rpx
}
.orderDetail_num wx-view{
  display: block;
}
.orderDetail_num .orderDetailNum{
 color: #333;

position: absolute;
right: 10rpx;
