.orderHeight{
  display: none;
}

.order_item .inline {
  /* margin-top: -8rpx; */
}
.order_item .inline wx-text{
  display: inline-block;
  line-height: 43rpx;
}
.order_item .first {
  margin-right: 40rpx;
}

/*底部 价格  */
