.total {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top: 2rpx solid #ebebeb;
  z-index: 1000;
  /* background-color: #fff;   */
  background: rgba(255, 255, 255, 1);
}

.total wx-text {
  display: block;
  width: 80%;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  border-right: 1rpx solid #ddd;
  box-sizing: border-box;
}

/* 选择支付方式 */
.total wx-button {
  border: none;
  background-color: #289dee;
  width: 50%;
  text-align: center;
  font-size: 28rpx;
  /* color: #333; */
  height: 100%;
  box-sizing: border-box;
  line-height: 98rpx;
  border-radius: 0;
  color: #fff;
}

.total wx-button:after {
  border: none;
}
/*支付方式弹层  */
.pay_title {
  line-height: 88rpx;
