.order_item .orederDetail_attribute{
  line-height: 43rpx;
}
.orderDetail-seemore{
  position: relative;
}
.orderDetail-seemore wx-image{
  position: absolute;
  right: 0;
  top: 16rpx;
  width: 20rpx;
  height: 20rpx;
