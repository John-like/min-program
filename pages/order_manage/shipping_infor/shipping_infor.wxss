/* pages/order_manage/shipping_infor/shipping_infor.wxss */
.scroll_wrapper {
  height: 1208rpx;
}
wx-text {
  font-size: 24rpx;
  color: #777;
}
.shipping_time {
  width: 100%;
  height: 66rpx;
  background-color: #f5f5f5;
  display: flex;
  padding-left: 44rpx;
  border-bottom: 1px solid #c3c3c3;
  line-height: 66rpx;
  align-items: center;
  box-shadow: 0 1px 5px #e6e6e6 inset;
  box-sizing: border-box;
}
.shipping_time wx-image {
  width: 35rpx;
  height: 20rpx;
  margin-right: 23rpx;
  margin-left: 30rpx;
}
.shipping_time .first {
  flex:1;
}
.logistics_static {
  margin: 15rpx 44rpx;
  position: relative;
}
.logistics_static  wx-text{
  display: block;
  line-height: 50rpx;
}
.logistics_follow {
  width: 660rpx;
  height: 230rpx;
  border: 1px solid #c9c9c9;
  padding-left: 28rpx;
  box-sizing: border-box;
}
.logistics_follow .marginT30 {
  margin-top: 15rpx;
}
.order_classify {
  width: 100%;
  padding:0 44rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #d0d0d0;
}
.order_title {
  font-size: 24rpx;
  color: #777;
  line-height: 85rpx;
}
.order_item {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 30rpx;
}
.order_item wx-image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}
.goods_name {
  font-size: 28rpx;
  color: #333;
  margin-top: -10rpx;
}
.order_item wx-text {
  display: block;
  font-size: 24rpx;
  line-height: 43rpx;
}
.order_item .inline {
  margin-top: -8rpx;
}
.order_item .inline wx-text{
  display: inline-block;
  line-height: 43rpx;
}
.order_item .first {
  margin-right: 40rpx;
}
