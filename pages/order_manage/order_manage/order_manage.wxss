page {
  font-size: 24rpx;
  color: #777;
  width: 100%;
  height: 100%;
  position: relative;
}

.order-title {
  white-space: nowrap;
  font-size: 28rpx;
  color: #333;
  /* padding-left: 36rpx; */
  border-bottom: 1px solid #f1f1f1;
  box-sizing: border-box;
}

.title-part {
  display: inline-block;
  text-align: center;
  height: 40px;
  line-height: 40px;
  padding: 0rpx 20rpx;
  position: relative;
  width:100%;
}

