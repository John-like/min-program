/*公用 列表  */

.order-list {
  padding: 32rpx 42rpx;
  border-bottom: 1px solid #c9c9c9;
}

.list-title {
  display: flex;
  font-size: 28rpx;
  color: #333;
}

.list-title wx-view {
  width: 50%;
}

.list-title wx-view:nth-child(2) {
  text-align: right;
}

.list-main {
  display: flex;
  padding: 18rpx 0rpx;
}

.order-right {
  width: 458rpx;
}

.order-right > wx-view {
  padding: 4rpx 4rpx;
  line-height: 40rpx;
}
.order-right .orderRight_dot{
  width: 460rpx;
  height: 80rpx;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;

}

/* .order-right > wx-view:nth-last-child(1) {
  color: #333;
} */

.order-btn {
  display: flex;
  justify-content: flex-end;
  margin-top: 6rpx;
}

.btn-box {
  width: 140rpx;
  height: 52rpx;
  border: 1px solid #c9c9c9;
  border-radius: 8rpx;
  text-align: center;
  line-height: 50rpx;
  margin-right: 18rpx;
}

.btn-box:nth-last-child(1) {
  margin-right: 0rpx;
}
.pay-box {
  background: #1891d2;
  border: none;
  color: #fff;
}

/*订单底部签收  */

.drawer_box {
  padding-bottom: 30rpx;
  min-height: 480rpx;
}

.order-sign {
  text-align: center;
  color: #333;
  font-size: 30rpx;
  margin: 20rpx 0rpx 60rpx 0rpx;
}

.order-confirm {
  width: 460rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-confirm wx-view {
  padding: 16rpx 40rpx;
  border: 1px solid #c7c7c7;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.order-remarks {
  padding: 20rpx 32rpx;
}

.remarks-reason {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.remarks-input {
  width: 434rpx;
  height: 64rpx;
  background: #fff;
  margin: 0rpx 40rpx;
  border: 1px solid #ccc;
  padding-left: 20rpx;
  color: #333;
}

.remarks-btn {
  width: 456rpx;
  height: 70rpx;
  margin: 30rpx auto;
}

.remarks-btn wx-button {
  width: 100%;
  height: 70rpx;
  border: none;
  background: #289dee;
  color: #fff;
  line-height: 70rpx;
  border-radius: 35rpx;
}

/* 默认页面  */

.order_default {
  width: 100%;
  overflow: hidden;
}

.order_default_img {
  width: 263rpx;
  height: 263rpx;
  margin: 200rpx auto 0;
}

.order_default_img wx-image {
  width: 263rpx;
  height: 263rpx;
}

.order_default wx-text {
  width: 100%;
  display: block;
  text-align: center;
  line-height: 80rpx;
}

.order_default .to_index {
  width: 240rpx;
  height: 86rpx;
  border: 1rpx solid #c7c7c7;
  line-height: 86rpx;
  text-align: center;
  margin:0 auto;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #777;
}

/*支付方式  */
.payment {
  position: fixed;
  top: 283rpx;
  left: 105rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 114rpx;
  justify-content: space-around;
  width: 540rpx;
  height: 634rpx;
  border-radius: 22rpx;
  box-sizing: border-box;
}
.payment wx-text {
  font-weight: bold;
}
.payment .payment_way {
  margin-top: 25rpx;
  font-size: 30rpx;
  color: #000;
}
.payment .payment_icon_wechat {
  width: 46rpx;
  height: 37rpx;
}
.payment .payment_icon_bank {
  width: 41rpx;
  height: 33rpx;
}
.payment .payment_icon_offline {
  width: 42rpx;
  height: 42rpx;
}
.payment .payment_choose {
  /* display: flex;
  justify-content: space-around; */
  width: 256rpx;
  height: 42rpx;
  line-height: 42rpx;
}
.payment_choose wx-image {
  float: left;
  margin-left: 20rpx;
  margin-right: 35rpx;
}
.payment_choose wx-text {
  float: left;
}
.payment .free_extra {
  letter-spacing: 2rpx;
  font-size: 24rpx;
  color: #dc3235;
}
.payment .payment_cancel {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 42rpx;
  height: 42rpx;
}

/*银行卡支付弹窗  */
.pay_of_bank {
  position: fixed;
  top: 283rpx;
  left: 105rpx;
  width: 560rpx;
  height: 524rpx;
  border-radius: 8rpx;
}
.card_close {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 30rpx;
  height: 30rpx;
}
.password_please {
  width: 100%;
  height: 97rpx;
  line-height: 97rpx;
  text-align: center;
  border-bottom: 1rpx solid #f1f1f1;
  color: #333;
  font-size: 34rpx;
}
.unit_price {
  width: 100%;
  height: 182rpx;
  line-height: 182rpx;
  text-align: center;
  font-size: 54rpx;
  font-weight: bold;
  color: #333;
  letter-spacing: 5rpx;
}
.card_type {
  display: flex;
  width: 501rpx;
  height: 85rpx;
  line-height: 85rpx;
  margin-left: 33rpx;
  border-top: 1rpx solid #d4d4d4;
  border-bottom: 1rpx solid #d4d4d4;
  font-size: 31rpx;
}
.card_type .bank_logo {
  width: 55rpx;
  height: 55rpx;
  margin-top: 15rpx;
  border-radius: 50%;
}
.card_type .bank_msg {
  flex: 3;
  margin-left: 23rpx;
}
.card_type .jump {
  width: 17rpx;
  height: 26rpx;
  margin-top: 30rpx;
}
/*密码框  */
.pay_word {
  position: relative;
  width: 492rpx;
  height: 85rpx;
}
.pay_word .password {
  width: 100%;
  height: 0; 
  border-top: 2rpx solid #c5c5c6;
  margin-top: 36rpx;
  margin-left: 37rpx;
  color: rgba(0,0,0,0);
  background-color: rgba(0,0,0,0);
  font-size: 0;
  line-height: 0;
  min-height: 0;
}
.placeholder_psw {
  letter-spacing: 100rpx;
}
.hidden_word {
  position: absolute;
  display: flex;
   z-index: -1; 
  /* top: 57rpx; */
  left: 36rpx;
  width: 492rpx;
  height: 85rpx;
  background: #fff;
}
.hidden_word wx-input {
  width: 83rpx;
  height: 86rpx;
  font-size: 50rpx;
  text-align: center;
  border-left: 2rpx solid #c5c5c6;
  border-bottom: 2rpx solid #c5c5c6;
}
.hidden_word .last {
  border-right: none;
}
.line {
  position: absolute;
  bottom: -4rpx;
  right: -35rpx;
  width: 2rpx;
  height: 86rpx;
  background: #c5c5c6;
}
