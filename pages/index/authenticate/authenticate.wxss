/* pages/index/authenticate/authenticate.wxss */
.bar_img {
  width: 100%;
  height: 322rpx;
  border-bottom: 30rpx solid #f5f5f5;
}
.bar_img image {
  width: 100%;
  height: 100%;
}

.type,
.role{
  display: flex;
  height: 100rpx;
  width: 100%;
  padding-left: 74rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f5f5f5;
  line-height: 100rpx;
  align-items: center;
}
.role > text ,
.type > text {
  width: 145rpx;
  font-size: 36rpx;
}
.type .radio-group radio{
   display: none; 
}
.type .radio-group .radio{
  display: inline-block;
  width: 140rpx;
  height: 68rpx;
  margin-right: 20rpx;
  line-height: 68rpx;
  text-align: center; 
  border:  3rpx solid #fff;
  font-size: 28rpx;
}
.type .radio-group .radio_check {
  border: 3rpx solid #289ded;
  border-radius: 10rpx;
}
.role .role_picker {
  width: 260rpx;
  height: 68rpx;
  border: 3rpx solid #289ded;
  border-radius: 10rpx;
  line-height: 68rpx;
  /* text-align: center; */
  font-size: 28rpx;
}
.role .role_picker wx-picker {
  display: inline-block;
  /* padding-right: 70rpx; */
  text-align: center;
  width: 260rpx;
  /* padding-left: 20rpx;  */
  position: relative;
}
.user_name {
  margin-top: 20rpx;
  padding-left: 74rpx;
}
.user_name label {
  font-size: 36rpx;
}
.user_name input {
  width: 605rpx;
  height: 69rpx;
  padding-left: 21rpx;
  margin-top: 23rpx;
  border: 1rpx solid #c9c9c9;
  border-radius: 6rpx;
  font-size: 30rpx;
}
.user_name .placeholder {
  font-size: 22rpx;
  color: #ddd;
}
.arrow_botoom {
  position: absolute;
  right: 12rpx;
  top: 26rpx;
  /* background: #787878; */
  width: 0;
  height: 0;
  border-left: 13rpx solid transparent;
  border-right: 13rpx solid transparent;
  /* border-bottom: 18rpx solid transparent; */
  border-top: 18rpx solid #787878;
  z-index: -1;
}
/*身份证  */
.id_cards {
  width:100%;
  box-sizing: border-box;
  padding-left: 74rpx;
  margin-top: 30rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}
.id_img_wrapper {
  height: 200rpx;
  display: flex;
}
.id_cards .add_img {
  display: block;
  width: 150rpx;
  height: 150rpx;
  margin-left: 146rpx;
}
.id_cards .add_img1 {
  margin-left: 0;
}

.tip {
  color: #787878;
  font-size: 24rpx;
  text-align: center;
  margin-top: 73rpx;
}
.tip_personal {
  padding-bottom: 30rpx;
}
.upload_wrapper {
  width: 140rpx;
  height: 240rpx; 
  position: relative;
  margin-right: 40rpx;
}
.upload_wrapper .uploadedImg {
  width: 100%;
  height: 100%; 
}
.upload_wrapper .delete {
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 100;
}

/*身份证信息  */
.id_cards_info {
  width:100%;
  font-size: 36rpx;
}
.id_cards_name{
  padding-left: 74rpx;
  border-bottom:2rpx solid #f5f5f5
}
.id_cards_id {
  padding-left: 74rpx;
}
.id_cards_info text {
  line-height: 89rpx;
}
.id_cards_info wx-input {
  width: 604rpx;
  height: 68rpx;
  font-size: 28rpx;
  border:1rpx solid #c9c9c9;
  border-radius: 4rpx;
  padding-left: 20rpx;
  margin-bottom: 25rpx;
}

.commit {
  width: 592rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 90rpx auto 0;
}
.commit button {
  width: 100%;
  height: 100%;
  background: #289ded;
  color: #fff;
}

/*提示信息位置  */
.tip_message_con {
  bottom: 30%;
}

