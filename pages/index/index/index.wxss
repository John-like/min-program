  position: relative;
  flex: 1;
  padding-right: 20rpx;
}
.user_contact wx-contact-button{
  /* padding-left:16rpx; */
  opacity: 0;
  width: 100%;
  height: 60rpx;
}
.user_contact .contact_img {
  position: absolute;
  top: 5rpx;
  right: 26rpx;
  z-index: -1;
  width: 50rpx;
  height: 50rpx;
  display: block;
}

/*轮播栏  */
.header-banner {
  margin-top: 90rpx;
}
.contain swiper {
  height: 320rpx;
}
.production-category {
  display: flex;
  width: 100%;
  flex-direction: row;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #353535;
  flex-wrap:wrap;

}
.category-item {
    width: 25%;
    display: flex;
    flex-direction:column;
    align-items: center;
    margin-bottom: 20rpx;
}
.category-item wx-text {
  font-size: 24rpx;
  line-height: 40rpx;
}
.production-category .category-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.category-img wx-image {
  width: 200rpx;
  height: 200rpx;
}

.fr-category-img {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 108rpx;
  height: 108rpx;
  border: 0px solid #ccc;
  border-radius: 4px;
  overflow: hidden;
}
.fr-category-img wx-image {
  width: 108rpx;
  height: 108rpx;
}

/*热卖推荐  */
.superValue {
  width: 100%;
  padding:0 23rpx;
  box-sizing: border-box;
  border-top: 20rpx solid #efefef;
}
.superValue wx-text{
  color: #333;
  line-height: 80rpx;
  font-size: 28rpx;
}
.superValue_item {
  display: flex;
  justify-content: space-between;
}
.superValue_item wx-navigator {
  width:228rpx;
  height: 322rpx;
  overflow: hidden;
  box-shadow: 2px 0 8px #dcdcdc;
  border-radius: 8rpx;
}
.slide-image {
  width: 100%;
  height: 100%;
  background-color: #efc5c6;
  overflow: hidden;
  border-radius: 4rpx;
}

/*头部广告栏  */
.index-ad{
  width: 100%;
  height: 88rpx;
  position: relative;
  margin-bottom: 10rpx;
}
.index-ad-navigator{
    width: 100%;
    display: block;
}
.index-ad-img{
  width: 100%;
  display: block;
}
.index-ad-err{
  position: absolute;
  right: 8rpx;
  top: 10rpx;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
}
.index-ad-err wx-image{
    width: 38rpx;
    opacity: 0.8;
}
.drawer_screen {
   z-index: 600; 
}
.drawer_box {
   z-index: 700;
   bottom: 6%;
   left: 0;
   background: rgba(0, 0, 0, 0)
}
