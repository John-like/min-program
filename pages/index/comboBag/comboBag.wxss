/* page/component/pages/tcbao/tcbao.wxss */

page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.contain {
  position: fixed;
  top: 0;
  left: 0;
}

.tab-content {
  border-bottom: 1px solid #ccc;
}

.tab-tc {
  padding: 23rpx 10rpx;
  display: flex;
}

.tab-tc-fr {
  width: 514rpx;
  min-height: 182rpx;
  padding-bottom: 20rpx;
  border: none;
}

/* .tc-main{

} */

.container {
  position: relative;
  width: 100%;
  background-color: #fff;
  color: #939393;
}

/*左边部分  */

.nav_left {
  float: left;
  width: 160rpx;
  background: #f5f5f5;
  text-align: center;
  color: #777;
  /* overflow: scroll; */
  height: 860rpx;
}

.nav_left .nav_left_items {
  height: 112rpx;
  line-height: 112rpx;
  padding: 0px 14rpx;
  border-bottom: 1px solid #dedede;
  font-size: 28rpx;
}

.nav_left .nav_left_items.active {
  background: #fff;
  color: #333;
  border: none;
  font-weight: bold;
}

/*右边部分  */

.nav_right {
  display: inline-block;
  width: 550rpx;
  height: 860rpx;
  margin: 0rpx 0rpx 10rpx 30rpx;
  background: #fff;
  box-sizing: border-box;
  clear: both;
  color: #777;
  font-size: 28rpx;
  /* overflow: scroll; */
}

.right-title {
  margin: 26rpx 0rpx;
  border-left: 5px solid #d71518;
  text-indent: 14px;
  color: #333;
  font-weight: bold;
}

.right-content {
  display: flex;
  border-bottom: 1px solid #f1f1f1;
  margin-bottom: 30rpx;
  position: relative;
}

.right-img {
  width: 138rpx;
  height: 138rpx;
  overflow: hidden;
  border-radius: 6px;
  margin-right: 30rpx;
}

.right-img wx-image {
  width: 138rpx;
  height: 138rpx;
}

.right-word {
  flex: 1;
  font-size: 25rpx;
  margin-right: 20rpx;
}

.right-word wx-view {
  margin-bottom: 24rpx;
}

.right-word-title {
  color: #333;
  font-weight: bold;
  font-size: 26rpx;
}

.right-word-num {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 44rpx;
}

.right-word-num wx-view {
  margin: 0;
}

.num-content {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 138rpx;
  /* position: absolute;
   right: 0;
   bottom: 0; */
}

.num-content wx-view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 46rpx;
  height: 46rpx;
}

.num-content wx-view wx-image {
  width: 46rpx;
  height: 46rpx;
}

.nav_right .nav_right_items {
  float: left;
  width: 33.33%;
  height: 80px;
  text-align: center;
}

.nav_right .nav_right_items image {
  width: 50px;
  height: 30px;
}

.nav_right .nav_right_items text {
  display: block;
  margin-top: 5px;
  font-size: 10px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/*购物车弹窗  */

.shopCar {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0rpx;
  left: 0;
  z-index: 11;
  background: #fff;
  border-radius: 3px;
  font-size: 24rpx;
  color: #777;
}

.shopCar_contetn {
  max-height: 820rpx;
  overflow-y: scroll;
}
.shopCar_top{
  height: 88rpx;
  display: flex;
  padding: 0rpx 40rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.shopCar_listName{
  background: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  padding: 26rpx 40rpx;
}
.shopCar_listContent{
  padding: 30rpx 0rpx;
}
.order_item {
  display: flex;
  justify-content: flex-start;
  padding: 0rpx 40rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #dddddd;
  padding-bottom: 22rpx;
}
.order_item:nth-last-child(1){
  border:none;
}
.order_item wx-image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}
.num-image-space wx-image{
  margin-right: 0rpx;
}
.order_item wx-text {
  display: block;
  line-height: 43rpx;
}
.order_item .goods_name {
  font-size: 28rpx;
  color: #333;
  margin-top: -10rpx;
}
.order_item .inline {
  /* margin-top: -8rpx; */
  position: relative;
  width: 520rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}
.order_item .inline wx-text{
  display: inline-block;
  line-height: 43rpx;
}
.order_item .first {
  margin-right: 40rpx;
}
.shopCar_setcar{
  width:100%;
height:98rpx;
background:#fff;
border-top:1px solid #f2f2f2;
display:flex;
}
