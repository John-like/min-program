/* pages/index/search_result/search_result.wxss */

/*顶部搜索栏  */

.search_bar {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  background: #fff;
  /* border-bottom: 20rpx solid #efefef; */
   border-bottom: 4rpx solid #efefef; 
}

.search_bar .search {
  margin-bottom: 12rpx;
  border-bottom: 1rpx solid #f2f2f2;
  width: 750rpx;
}

.search_bar .search input {
  font-size: 28rpx;
  color: #333;
  width: 630rpx;
  height: 64rpx;
  background: #efefef;
  margin-left: 22rpx;
  padding-left: 46rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  display: inline-block;
}

.search_bar .search button {
  display: inline-block;
  width: 90rpx;
  border: 0;
  font-size: 28rpx;
  color: #333;
  padding: 0;
  background: #fff;
  margin-left: 6rpx;
}

.search_bar button:after {
  border: 0;
}

/*筛选选项  */

.options_title {
  height: 87rpx;
  width: 100%;
  display: flex;
}

.options_title .option {
  width: 50%;
  height: 100%;
  box-sizing: border-box;
  border-right: 1rpx solid #f0f0f0;
  line-height: 87rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  position: relative;
}

.options_title .arrow_bottom {
  width: 0;
  height: 0;
  border-top: 18rpx solid #787878;
  border-right: 15rpx solid transparent;
  border-left: 15rpx solid transparent;
  position: absolute;
  top: 38rpx;
  right: 30%;
}

.options_title .checked {
  color: #f33;
}

.options_title .checked .arrow_bottom {
  border-top: 18rpx solid #f33;
  transform: rotate(180deg);
}

/*商品列表  */

.overHidden {
  overflow: hidden;
}

.goods_lists {
  width: 100%;
  /* height: 1020rpx;  */
   /* height: 1112rpx;   */
  align-items: center;
  margin-top: 90rpx;
  /* margin-top: 200rpx; */
  /* margin-bottom: 110rpx; */
}
.goods_list_wrapper {
  position: relative;
}
.goods_list {
  display: flex;
  width: 100%;
  height: 240rpx;
  align-items: center;
  border-bottom: 2rpx solid #efefef;
  padding-left: 22rpx;
  padding-right: 38rpx;
  box-sizing: border-box;
}

.goods_lists .goods_img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 2rpx;
  margin-right: 26rpx;
}

.goods_lists .goods_img image {
  width: 100%;
  height: 100%;
  border-radius: 2rpx;
}

.goods_lists .goods_detail {
  width: 503rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods_lists .goods_detail_title {
  width: 100%;
  font-size: 28rpx;
  line-height: 44rpx;
  color: #333;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  position: relative;
}
.goods_detail .hot {
   padding-left: 50rpx; 
}
.goods_detail_title wx-image {
  position: absolute;
  top: 0;
  left: 0; 
  width: 40rpx;
  height: 40rpx;
  /* margin-top: -10rpx; */
  z-index: 10;
}

.goods_lists .goods_detail_brand {
  color: #666;
