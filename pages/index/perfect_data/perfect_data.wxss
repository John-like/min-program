.register_title {
  text-align: center;
  margin-bottom: 32rpx;
  font-size: 28rpx;
  color: #333;
}

.register_grid {
  padding-top: 20rpx;
}

.input_contain {
  padding: 0 44rpx;
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  /* margin-left: 44rpx; */
  /* border-bottom: 1rpx solid #f5f5f5; */
  box-sizing: border-box;
}

.input_title {
  /* display: block; */
  width: 176rpx;
  height: 58rpx;
  text-align: justify;
  text-align-last:justify;
  line-height: 58rpx;
  margin-right: 18rpx;
  white-space: nowrap;
  display: flex;
  text-justify: auto;
}
.input_title1 {
  letter-spacing: 9rpx;
}
.input_title2 {
  letter-spacing: 1rpx;
}

.input_base {
  display:block;
  width: 400rpx; 
  height: 58rpx;
  border: 1px solid #ccc;
  border-radius: 6rpx;
  padding-left: 24rpx; 
  color: #333;
  font-size: 28rpx;
}

.iniput_code {
  width: 250rpx;
  margin-right: 20rpx;
  padding-left: 24rpx;
  box-sizing: border-box;
}

.input_button {
  width: 150rpx;
  height: 60rpx;
  border-radius: 8rpx;
  color: #fff;
  background: #00a0f5;
  font-size: 24rpx;
  padding: 0;
  margin: 0;
  text-align: center;
  line-height: 60rpx;
  outline: none;
}
.input_button::after {
  border: none;
}

